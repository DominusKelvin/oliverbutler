{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "slug": {
      "type": "string"
    },
    "readingTime": {
      "type": "float",
      "default": 0
    },
    "tags": {
      "collection": "tag"
    },
    "dynamic": {
      "type": "dynamiczone",
      "components": [
        "display.text",
        "display.code",
        "display.image"
      ]
    }
  }
}
